    <title>SB Admin 2 - Blank</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     
    <!-- css -->
    <%- include('../partials/css')  %>

</head>

<body id="page-top">
    <div id="wrapper">
        <!-- header ve nav dosyam-->
        <%- include('../partials/header-nav')  %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
              
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-lg">
                                <div class="card-header text-center">
                                    <h3>Yorum Ekle</h3>
                                </div>
                                <div class="card-body">
                                    
                                    <form action="/comment/create" method="POST">
                                        <div class="mb-3">
                                            <label for="mealId" class="form-label">Yemek Se√ß</label>
                                            <input type="text" class="form-control" id="mealId" name="mealId" placeholder="Yemek ID girin" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="text" class="form-label">Yorum</label>
                                            <textarea class="form-control" id="text" name="text" rows="3" required></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="rating" class="form-label">Puan (1-5)</label>
                                            <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Yorumu Ekle</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
    <%- include('../partials/footer')  %>
  
    <%- include('../partials/script')  %>
</body>

</html>