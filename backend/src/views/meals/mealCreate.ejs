<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Blank</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     
    <!-- css -->
    <%- include('../partials/css')  %>

</head>

<body id="page-top">
    <div id="wrapper">
        <!-- header ve nav dosyam-->
        <%- include('../partials/header-nav')  %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
              
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-lg">
                                <div class="card-header text-center">
                                    <h3>Yemek Ekle</h3>
                                </div>
                                <div class="card-body">
                                    <form action="/meal/create" method="POST">
                                        <div class="mb-3">
                                            <label for="date" class="form-label">Tarih</label>
                                            <input type="date" class="form-control" id="date" name="date" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="corba" class="form-label">Çorba</label>
                                            <input type="text" class="form-control" id="corba" name="mealName[corba]" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="anaYemek" class="form-label">Ana Yemek</label>
                                            <input type="text" class="form-control" id="anaYemek" name="mealName[anaYemek]" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="pilav" class="form-label">Pilav</label>
                                            <input type="text" class="form-control" id="pilav" name="mealName[pilav]" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="tatli" class="form-label">Tatlı (Opsiyonel)</label>
                                            <input type="text" class="form-control" id="tatli" name="mealName[tatli]">
                                        </div>
                                        <div class="mb-3">
                                            <label for="calories" class="form-label">Kalori</label>
                                            <input type="number" class="form-control" id="calories" name="calories" min="0" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Ekle</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
           
        </div>
    </div>
    <%- include('../partials/footer')  %>
  
    <%- include('../partials/script')  %>
</body>

</html>